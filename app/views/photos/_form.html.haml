= form_for @photo, :html => { :class => 'form-horizontal' } do |f|
  - if @photo.errors.any?
    #error_explanation
      %h2
        = pluralize(@photo.errors.count, "error")
        "prohibited this user from being saved:"
      %ul
        - @photo.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :url, :class => 'control-label'
    .controls
      = f.file_field :url, :class => 'file_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area', :rows => 4
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), photos_path, :class => 'btn'
