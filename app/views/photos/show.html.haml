- model_class = Photo

= render @photo


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), photos_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_photo_path(@photo), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), photo_path(@photo), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
